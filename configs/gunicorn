[Unit]
Description=gunicorn daemon
Requires=gunicorn.socket
After=network.target

[Service]
User=chino
Group=www-data
WorkingDirectory=/home/chino/aproveite-petropolis
ExecStart=/home/chino/aproveite-petropolis/venv/bin/gunicorn \
          --access-logfile - \
          --workers 3 \
          --bind unix:/run/gunicorn.sock \
          aproveite-petropolis.wsgi:application